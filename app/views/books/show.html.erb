<div class='container'>
   <%#= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @spbook.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@spbook.user) do %>
            <%= image_tag @spbook.user.get_profile_image, size:"100x100" %><br>
            <%= @spbook.user.name %>
            <% end %>
          </td>
          <td><%= link_to @spbook.title, @spbook %></td>
          <td><%= @spbook.body %></td>
            <% if @spbook.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@spbook), class: "btn btn-sm btn-success edit_book_#{@spbook.id}" %></td>
            <% end %>
            <% if @spbook.user == current_user %>
            <td><%= link_to 'Destroy', @spbook, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@spbook.id}"%></td>
            <% end %>

<% if @spbook.favorited_by?(current_user) %>
    <td>
      <%= link_to book_favorites_path(@spbook), method: :delete do %>
        ♥<%= @spbook.favorites.count %>
      <% end %>
    </td>
    <% else %>
    <td>
      <%= link_to book_favorites_path(@spbook), method: :post do %>
        ♡<%= @spbook.favorites.count %>
      <% end %>
    </td>
  <% end %>


  <td><p>コメント件数：<%= @spbook.book_comments.count %></p>
  <% @spbook.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
    <%= book_comment.user.name %>
    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
  <% end %>
  </td>
  <td>
  <%= form_with model: [@spbook, @book_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
  </td>
        </tr>
      </table>
    </div>
  </div>
</div>